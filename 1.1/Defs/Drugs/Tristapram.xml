<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>Tristapram</defName>
    <label>tristapram</label>
    <description>A drug for greatly improving a persons mood.</description>
    <graphicData>
      <texPath>Item/Tristapram</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>600</WorkToMake>
      <MarketValue>24</MarketValue>
      <Mass>0.005</Mass>
      <Flammability>0.7</Flammability>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <drugCategory>Medical</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>TristapramHigh</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
			<researchPrerequisite>TristapramProduction</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Neutroamine>6</Neutroamine>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1000</listOrder>
        <overdoseSeverityOffset>
          <min>0.08</min>
          <max>0.14</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>
  
  <HediffDef>
    <defName>TristapramHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>tristapram</label>
    <description>tristapram</description>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.30</severityPerDay>
      </li>
    </comps>
	<stages>
        <li>
          <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <offset>-0.25</offset>
            </li>
          </capMods>
        </li>
      </stages>
  </HediffDef>
  
   <ThoughtDef>
    <defName>TristapramHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>TristapramHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Tristapram</label>
        <description>Why was I upset again?</description>
        <baseMoodEffect>25</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>
